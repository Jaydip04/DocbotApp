<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    tools:context=".fragment.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="270dp"
        app:cardCornerRadius="0dp"
        android:layout_margin="0dp"
        android:backgroundTint="#E0F6FB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Texts -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruchita"
                android:textSize="16sp"
                android:textColor="#333"
                app:layout_constraintTop_toBottomOf="@id/welcomeText"
                app:layout_constraintStart_toStartOf="@id/welcomeText" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How is it going today?"
                android:textSize="14sp"
                android:textColor="#888"
                app:layout_constraintTop_toBottomOf="@id/userName"
                app:layout_constraintStart_toStartOf="@id/userName" />

            <!-- Horizontal Icon Row -->
            <LinearLayout
                android:id="@+id/topIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    android:layout_margin="4dp" />

                <ImageView
                    android:id="@+id/monitoring"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_monitoring"
                    android:layout_margin="4dp" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_profile"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_white" />
            </LinearLayout>

            <!-- Doctor image at bottom right -->
            <ImageView
                android:id="@+id/doctorImage"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_doctor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-24dp"
        android:background="@drawable/top_rounded_bg"
        android:elevation="4dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Card: Add New Patient -->
            <LinearLayout
                android:id="@+id/addPatientCard"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_bg_patient_card"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="68dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_teal">

                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user"
                        app:tint="#FFFFFF" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/circle_white"
                        android:src="@drawable/ic_add"
                        app:tint="#02B3B7" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Patient"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Card: Take a Test -->
            <LinearLayout
                android:id="@+id/takeTestCard"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_bg_patient_card"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addPatientCard">

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="68dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_teal">

                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_test"
                        app:tint="#FFFFFF" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/circle_white"
                        android:src="@drawable/ic_add"
                        app:tint="#02B3B7" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take a test"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
