<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <!-- Number in Circle -->
    <TextView
        android:id="@+id/testNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="1"
        android:gravity="center"
        android:textColor="#00B8C9"
        android:textStyle="bold"
        android:background="@drawable/circle_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Test Name -->
    <TextView
        android:id="@+id/testName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textColor="#00B8C9"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/testNumber"
        app:layout_constraintTop_toTopOf="@id/testNumber"
        app:layout_constraintBottom_toBottomOf="@id/testNumber"
        app:layout_constraintEnd_toStartOf="@id/removeIcon"/>

    <!-- Remove Icon -->
    <ImageView
        android:id="@+id/removeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_remove"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/testNumber"
    app:layout_constraintBottom_toBottomOf="@id/testNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>
