<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Activity Theme without ActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text Styles -->
    <style name="CardTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SectionHeaderStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TestTitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StatusTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="InstructionTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ResultsTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_primary_selector</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_secondary_selector</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@drawable/btn_back_selector</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- Card Styles -->
    <style name="BaseCardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="InstructionCardStyle" parent="BaseCardStyle">
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="StatusCardStyle" parent="BaseCardStyle">
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="ResultsCardStyle" parent="BaseCardStyle">
        <item name="cardBackgroundColor">@color/success_background</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="TestProgressBarStyle">
        <item name="android:layout_height">8dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomBottomNavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item> <!-- Set your desired text size -->
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="TransparentStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
    <style name="TopRoundedCardShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


</resources>